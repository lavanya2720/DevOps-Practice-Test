BACKUP_DESTINATION="$HOME/backups"

# Comma-separated exclude patterns (interpreted as --exclude=PATTERN for tar)
EXCLUDE_PATTERNS=".git,node_modules,.cache"

# Retention
DAILY_KEEP=7
WEEKLY_KEEP=4
MONTHLY_KEEP=3

# Checksum tool: "sha256" or "md5" (script will fall back if not available)
CHECKSUM_ALGO="sha256"

# Optional: email address for notifications (script simulates by writing to email.txt)
NOTIFY_EMAIL=""

# Log file (if relative path, will be created inside BACKUP_DESTINATION)
LOG_FILE="backup.log"
